<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="cards">
        <% @seedpackages.each do |seedpackage| %>
        <% if seedpackage.status == "Disponible" %>
        <div class="card-product row justify-content-between">
          <div class="card-product-infos col-2">
            <%= cl_image_tag seedpackage.photo, crop: :fill, class: "left-img" %>
          </div>
          <div class="card-product-txt col-10">
            <div class="item-info">
              <h2> <%= link_to seedpackage.name, seedpackage_path(seedpackage) %> </h2>
              <div> <%= seedpackage.description %> </div>
            </div>
            <div class="user-infos">
              <img id="avatar-user" class="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
              <div class="user-infos-text">
                <div> <%= seedpackage.user.username %> </div>
                <div class="user-infos-text-2"> <%= seedpackage.package_price %> â‚¬
                <%= link_to '', seedpackage_transactions_path(seedpackage), method: :post, class: 'fa fa-shopping-cart'%></div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
